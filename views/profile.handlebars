<div class="container my-5">
    <h1>{{username}}'s Dashboard</h1>

    <h3>Resumes: </h3>

    {{#each resumes}}
        <div class="card text-center my-4">
            <div class="card-body my-3">
                <h4>{{fname}} {{lname}}</h4>
                <div class="contact">
                    <p>{{email}}</p>
                    <p>GitHub: {{github}}</p>
                </div>
                <hr>

            </div>
        </div>


    {{/each}}


    <div class="card my-5">
        <div class="card-header" id="card-header">
            <h3 class="m-3">Comments</h3>
        </div>

        <div class="card-body m-3">
            {{#each comments}}
            <p>{{content}}</p>

            <p>&mdash; {{format_date createdAt}}</p>
            {{/each}}
        </div>

    </div>

</div>