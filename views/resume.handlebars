<div class="container">
    <button type="button" class="download">Download Resume</button>
    <div class="card text-center my-4">
            <div class="card-body my-3">
                <h4 id="nameEl">{{singleResume.fname}} {{singleResume.lname}}</h4>
                <div class="contact">
                    <p id="emailEl">{{singleResume.email}}</p>
                    <p id="github">GitHub: {{singleResume.github}}</p>
                </div>
                

                <div id="education-history">
                <h6 id="work-history-head">EDUCATION:</h6>
                <hr>
                <h6 id="institute1" class="company">{{singleResume.institute1}}</h6>
                <p id="degree1">{{singleResume.degree1}}</p>
                <p id="edstart1" class="startend">
                    Start Date: {{format_date singleResume.edstart1}}
                </p>
                <p id="edend1" class="startend">
                    End Date: {{format_date singleResume.edend1}}
                </p>

                {{#if singleResume.institute2}}
                <h6 id="institute2" class="company-margin">{{singleResume.institute2}}</h6>
                <p id="degree2">{{singleResume.degree2}}</p>
                <p id="edstart2" class="startend">
                    Start Date: {{format_date singleResume.edstart2}}
                </p>
                <p id="edend2" class="startend">
                    End Date: {{format_date singleResume.edend2}}
                </p>
                {{/if}}

                {{#if singleResume.institute3}}
                <h6 id="institute3" class="company-margin">{{singleResume.institute3}}</h6>
                <p id="degree3">{{singleResume.degree3}}</p>
                <p id="edstart3" class="startend">
                    Start Date: {{format_date singleResume.edstart3}}
                </p>
                <p id="edend3" class="startend">
                    End Date: {{format_date singleResume.edend3}}
                </p>
                {{/if}}
            </div>

            <div id="work-history">
                <h6 id="work-history-head">WORK EXPERIENCE:</h6>
                <hr>
                <h6 id="company1" class="company">{{singleResume.company1}} || {{singleResume.role1}}</h6>
                <p>
                    <li id="description1">{{singleResume.description1}}</li>
                </p>
                <p id="rolestart1" class="startend">
                    Start Date: {{format_date singleResume.rolestart1}}
                </p>
                <p id="roleend1" class="startend">
                    End Date: {{format_date singleResume.roleend1}}
                </p>

                {{#if singleResume.company2}}
                <h6 id="company2" class="company-margin">{{singleResume.company2}} || {{singleResume.role2}}</h6>
                <ul>
                    <li id="description2">{{singleResume.description2}}</li>
                </ul>
                <p id="rolestart2" class="startend">
                    Start Date: {{format_date singleResume.rolestart2}}
                </p>
                <p id="roleend2" class="startend">
                    End Date: {{format_date singleResume.roleend2}}
                </p>
                {{/if}}

                {{#if singleResume.company3}}
                <h6 id="company3" class="company-margin">{{singleResume.company3}} || {{singleResume.role3}}</h6>
                <ul>
                    <li id="description3">{{singleResume.description3}}</li>
                </ul>
                <p id="rolestart3" class="startend">
                    Start Date: {{format_date singleResume.rolestart3}}
                </p>
                <p id="roleend3" class="startend">
                    End Date: {{format_date singleResume.roleend3}}
                </p>
                {{/if}}
            </div>

            <div id="skills">
                <h6 id="work-history-head">SKILLS:</h6>
                <hr>
                <ul>
                    <li id="skill1">{{singleResume.skill1}}</li>
                    <li id="skill2">{{singleResume.skill2}}</li>
                    <li id="skill3">{{singleResume.skill3}}</li>
                </ul>
            </div>
        </div>
        </div>

        {{> add-comment}}

    
        {{> comments}}

</div>

